def build(ctx):

    lib_names = [
        "rjson",
        "survival",
        "Formula",
        "xtable",
        "foreign",
        "car",
        "sandwich",
        "aod",
        "zoo",
        "lmtest",
        "AER",
        "ivpack"
    ]

    for lib_name in lib_names:
        ctx(
            features='run_r_script',
            source='install_required_lib.r',
            target=lib_name + '/DESCRIPTION',
            append=lib_name
        )
        ctx.add_group()
